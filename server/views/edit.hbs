<form class="form" action="/todos/{{id}}?_method=PUT" method="POST">
    <div class="form-group">
      <label for="title">Title</label>
      <input value="{{title}}" type="text" name="title" id="title" class="form-control" placeholder="Enter Title">
    </div>
    <div class="form-group">
      <label for="desc">Description</label>
      <textarea value="{{desc}}" type="text" name="desc" id="desc" class="form-control" placeholder="Enter Description" aria-describedby="helpId">{{desc}}</textarea>
      <small id="helpId" class="text-muted">This is optional</small>
    </div>
    <div class="form-group">
      <label for="priority">Priority</label>
      <select class="form-select" id="priority" name="priority">
        {{#select priority}}
        <option value="1">1</option>
        <option value="2">2</option>
        <option value="3">3</option>
        <option value="4">4</option>
        {{/select}}
      </select>
    </div>
    <button type="submit" class="btn btn-default btn-secondary mt-3">Update</button>
</form>
<div class="card">
    <div class="card-header">
        <h5 class="card-title">{{title}} <span class="badge text-bg-primary">{{priority}}</span></h3>
    </div>
    <div class="card-body">
        <p class="card-text">{{desc}}</p>
    </div>
    <div class="card-footer text-muted">
        {{date}}
    </div>
</div>
<form action="/todos/{{id}}?_method=DELETE" method="post" class="mt-3">
    <a href="/todos/{{id}}/edit" class="btn btn-default btn-warning">Edit</a>
    <button type="submit" class="btn btn-danger">Delete</button>
</form>